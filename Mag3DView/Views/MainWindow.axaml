        xmlns:ogl="clr-namespace:Mag3DView.Views"
        x:Class="Mag3DView.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Mag3DView">

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<!-- Define a layout -->
	<Grid>
